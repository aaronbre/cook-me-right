<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/step_list_item_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/steps_icon"/>

        <TextView
            android:id="@+id/step_list_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_heading"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintStart_toEndOf="@id/step_list_item_image"/>

        <TextView
            android:id="@+id/step_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/step_list_item_number"
            app:layout_constraintTop_toBottomOf="@id/step_list_item_number"
            android:textSize="@dimen/larger_text_size"
            android:textColor="#000"
            tools:text="Recipe Introduction"/>
    </android.support.constraint.ConstraintLayout>
</layout>
